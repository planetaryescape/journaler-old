{
  "name": "journaler",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "env": "doppler setup -c dev -p journaler-webapp",
    "dev": "doppler run -- next dev | pino-pretty",
    "email:build": "email build -d ./src/emails -p pnpm",
    "email:dev": "email dev",
    "email:export": "email export -d ./src/emails -p pnpm",
    "build": "next build",
    "start": "next start",
    "db:seed": "doppler run -- tsx seed.ts | pino-pretty",
    "db:generate": "doppler run -- drizzle-kit generate",
    "db:drop": "doppler run -- drizzle-kit drop",
    "db:studio": "doppler run -- drizzle-kit studio",
    "db:migrate": "NODE_ENV=development doppler run -- drizzle-kit migrate",
    "db:migrate:prd": "NODE_ENV=production doppler run -c prd -- drizzle-kit migrate",
    "db:migrate:stg": "NODE_ENV=production doppler run -c stg -- drizzle-kit migrate",
    "lint": "next lint --cache-location './node_modules/@eslint/.eslintcache/'",
    "lint-staged": "lint-staged",
    "prepare": "husky"
  },
  "dependencies": {
    "@clerk/nextjs": "^5.0.8",
    "@hookform/resolvers": "^3.3.4",
    "@knocklabs/node": "^0.6.11",
    "@knocklabs/react": "^0.2.22",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-hover-card": "^1.0.7",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-navigation-menu": "^1.1.4",
    "@radix-ui/react-radio-group": "^1.1.3",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.0.4",
    "@react-email/components": "0.0.17",
    "@react-email/tailwind": "^0.0.16",
    "@sentry/nextjs": "^7.114.0",
    "@t3-oss/env-nextjs": "^0.10.1",
    "@tanstack/react-query": "^5.36.0",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "@vercel/analytics": "^1.2.2",
    "@vercel/speed-insights": "^1.0.10",
    "class-variance-authority": "^0.7.0",
    "cloudinary": "^2.2.0",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "drizzle-orm": "^0.30.10",
    "drizzle-zod": "^0.5.1",
    "eslint-plugin-drizzle": "^0.2.3",
    "framer-motion": "^11.2.4",
    "micro": "^10.0.1",
    "next": "14.2.3",
    "next-cloudinary": "^6.5.2",
    "next-pwa": "^5.6.0",
    "next-themes": "^0.3.0",
    "next-view-transitions": "^0.1.1",
    "nextjs-toploader": "^1.6.12",
    "pino": "^9.1.0",
    "postgres": "^3.4.4",
    "react": "^18",
    "react-dom": "^18",
    "react-email": "2.1.2",
    "react-hook-form": "^7.51.4",
    "resend": "^3.2.0",
    "sonner": "^1.4.41",
    "stripe": "^15.6.0",
    "svix": "^1.24.0",
    "tailwind-merge": "^2.3.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@snaplet/copycat": "^5.0.0",
    "@snaplet/seed": "0.97.13",
    "@tailwindcss/typography": "^0.5.13",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "drizzle-kit": "^0.21.1",
    "eslint": "^8",
    "eslint-config-next": "14.2.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "pino-pretty": "^11.0.0",
    "postcss": "^8",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.10.2",
    "typescript": "^5"
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx}": "eslint --cache --fix",
    "src/**/*.{js,ts,tsx,css,md}": "prettier --write"
  }
}